<h1>Single user</h1>

<div class="container">
      <div class="image">
        <img src="<%= @user.Photo %>" alt="User photo">
      </div>

      <div class="user-img">
        <h1><%= @user.Name %><h1>
        <p>Number of posts: <%= @user.PostsCounter %></p>
      </div>
    </div>
  </div>
<h4>Bio: </h4>
<p><%= @user.Bio %></p>


<% @user.recent_posts.each  do |post| %>
<% link_to user_post_path(@user, post.id) do%>
  <div class="post-cont">
    <h2>Post: <%= post.title %></h2>
    <p><%= post.text %></p>
  </div>

  <div class="post-details">
    <span>Comments: <%= post.comments_counter %><span> 
    <span>Likes <%= post.likes_counter %></span>
  </li>
<% end %>
<% end %>

<button><%= link_to "See all posts", user_posts_path(@user) %></button>