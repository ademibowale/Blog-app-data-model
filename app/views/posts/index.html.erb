<h1>All posts by user</h1>

<div class="container">
      <div class="image">
        <img src="<%= @user.Photo %>" alt="User photo">
      </div>

      <div class="user-img">
        <h1><%= @user.Name %><h1>
        <p>Number of posts: <%= @user.PostsCounter %></p>
      </div>
    </div>
  </div>

<div>
  <% @user.recent_posts.each do |post| %>
    <%= link_to user_post_path(@user, post) do %>
      <h2>Post: <%= post.id %></h2>
    <% end %>

      <p><%= post.text %></p>
      <div>
        <span>Comments <%= post.comments_counter %></span>
        <span>Likes <%= post.likes_counter %></span>
      </div>
  <% end %>
</div>